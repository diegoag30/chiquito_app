<p style="color: green"><%= notice %></p>

<h1>Links</h1>

<div id="links">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><strong>Public url</strong> </th>
        <th><strong>Slug</strong></th>
        <th><strong>Type</strong></th>
        <th><strong>Expirates at</strong></th>
        <th><strong>Active</strong></th></th>
        <th><strong>Visits</strong></th></th>
        <th><strong>Actions</strong></th></th>
      </tr>
    </thead>
    <tbody>
  <% @links.each do |link| %>
        <tr>
          <%= render partial: 'link', locals: { link: link } %>
        </tr>
  <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New link", new_link_path %>
<%= button_to "Delete account", destroy_user_path(current_user), method: :delete, data: { confirm: 'Are you sure?' } %>
<div class="container">
  <%= paginate @links%>
</div>

